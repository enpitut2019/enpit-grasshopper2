<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="new-user">
    <%= form_for(@user) do |f| %>
      <img src="../assets/logo2.png" id="login-logo">

      <%= render 'shared/error_messages' %>
      <div style="text-align: left; margin: 4px"> ユーザ情報</div>
      <%= f.text_field :name, class: 'form-control', placeholder: "名前" %>

      <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" %>

      <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" %>
      <br>
      <br>
      <div class="profile_field"><%= f.fields_for :profile do |i| %>
       
        <div style="text-align: left; margin: 4px"> 目標 と そのためにやること</div>

        <%= i.text_field :goal, class: 'form-control', placeholder: "目標" %>

        <%= i.text_field :daily_task, class: 'form-control', placeholder: "やること" %>

      </div>
      <% end %>
      <div style="text-align: left; margin: 4px"> タグ</div>

      <div class="tag_field"><%= f.fields_for :tag do |t| %>
        <%= t.collection_select :tag, Kind.all, :tag_name, :tag_name %>
      </div>
      <% end %>

      <div class="tag_field"><%= f.fields_for :tag do |u| %>
        <%= u.collection_select :tag, Kind.all, :tag_name, :tag_name %>
      </div>
      <% end %>

      <div class="tag_field"><%= f.fields_for :tag do |v| %>
        <%= v.collection_select :tag, Kind.all, :tag_name, :tag_name %>
      </div>
      <% end %>


      <%= f.submit "登録", class: "btn btn-create" %>
    <% end %>
    </div>
    <div class="already-user">
      <p>既にアカウントをお持ちですか？ <%= link_to "ログイン", '/login' %></p>
    </div>
  </div>
</div>



