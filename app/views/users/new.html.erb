<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="new-user">
    <%= form_for(@user) do |f| %>
      <img src="../assets/logo2.png" id="login-logo">

      <%= render 'shared/error_messages' %>

      <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>

      <%= f.email_field :email, class: 'form-control', placeholder: "Email address" %>

      <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>

      <%= f.fields_for :profile do |i| %>

        <%= i.text_field :goal, class: 'form-control', placeholder: "goal" %>

        <%= i.text_field :daily_task, class: 'form-control', placeholder: "Daily task" %>

      <% end %>

      <%= f.submit "Create my account", class: "btn btn-create" %>
    <% end %>
    </div>
    <div class="already-user">
      <p>Already have an account? <%= link_to "Log in", '/login' %></p>
    </div>
  </div>
</div>



